@dynamicEnvironment object newVector(1, oNamespaceCanon)
!setNamespaces:
  retarget(isEnvironment);
  setHiddenData(target, safeVector(waitFor(arg(0))));
  normalReturn;
!namespaces
  retarget(isEnvironment);
  // FIXME: Typesafety?
  valueReturn(vectorObject(hiddenEntity(target)));

